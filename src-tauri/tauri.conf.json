{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "vite-tauri-bucket-box",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://localhost:3000/*"]
      },
      "dialog": {
        "all": true,
        "ask": true, 
        "confirm": true, 
        "message": true,
        "open": true, 
        "save": true
      },
      "shell": {
        "all": true, 
        "execute": true,
        "sidecar": true, 
        "open": true ,
        "scope": [
          {
            "name": "aws-cli",
            "cmd": "aws",
            "args": true
          },
          {
            "name": "bash",
            "cmd": "aws",
            "args": ["configure", "list"]
          }
        ]

      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.bucket-box.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 720,
        "resizable": true,
        "title": "Bucket Box",
        "width": 1280,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}
